<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
	<display-name>GameWeb</display-name>
	<description>GWT and XMPP gaming web application</description>

	<servlet>
		<servlet-name>Palladium</servlet-name>
		<servlet-class>org.xmpp.palladium.PalladiumServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Palladium</servlet-name>
		<url-pattern>/http-bind/</url-pattern>
	</servlet-mapping>

	<!-- Default page to serve -->
	<welcome-file-list>
		<welcome-file>GameWeb.html</welcome-file>
	</welcome-file-list>
</web-app>
